{
  "STEP:1_GET_STARTED_PAYLOAD": {
    "nextMessage":"greeting"
  },

  "greeting": {
    "type": "message",
    "text": "Hello!",
    "responseType": "text",
    "waitForUser": false,
    "nextMessage": "question_1"
  },

  "question_1": {
    "type": "message",
    "text": "What is your name?",
    "responseType": "text",
    "responseKey": "name",
    "nextMessage": "name_confirmation"
  },

  "name_confirmation": {
    "type": "message",
    "text": "Nice to meet you ${'name'}!",
    "responseType": "text",
    "waitForUser": false,
    "nextMessage": "question_2"
  },

  "question_2": {
    "type": "message",
    "text": "How old are you?",
    "responseType": "int",
    "responseKey": "age",
    "nextMessage": "age_confirmation"
  },

  "age_confirmation": {
    "type": "message",
    "text": "Wow ${'age'} years old!",
    "responseType": "text",
    "waitForUser": false,
    "nextMessage": "question_3"
  },

  "question_3": {
    "type": "button",
    "text": "How are you today?",
    "options": [{
      "title": "Good",
      "data": "good"
      },
      {
      "title": "Bad",
      "data": "bad"
      }
    ],
    "nextMessage": {
      "good": "positive_response",
      "bad": "negative_response"
    }
  },

  "positive_response": {
    "type": "message",
    "text": "I am glad to hear that!",
    "response_type": "text",
    "waitForUser": false,
    "nextMessage": "question_4"
  },

  "negative_response": {
    "type": "message",
    "text": "I am sorry to hear that :(",
    "response_type": "text",
    "waitForUser": false,
    "nextMessage": "question_4"
  },

  "question_4": {
    "type": "message",
    "text": "Where do you live?",
    "responseType": "text",
    "scripts": [
      "location"
    ],
    "state": "question",
    "responseKey": "location",
    "nextMessage": "location_selection"
  },

  "location_selection": {
    "type": "generic",
    "scripts": [
      "location"
    ],
    "state": "selection",
    "nextMessage": "location_confirmation"
  },

  "location_confirmation": {
    "text": "You selected ${location}!",
    "responseType": "text",
    "scripts": [
      "location"
    ],
    "state": "confirmation",
    "waitForUser": false,
    "nextMessage": "goodbye"
  },

  "goodbye": {
    "type": "message",
    "text": "Thanks for talking to me today, Goodbye!",
    "response_type": "text",
    "nextMessage": "nil"
  }
}
